<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{{ pageTitle }} | College of Education | U of I</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link type="text/css" href="../style/site.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Fjalla+One&family=Montserrat:wght@400;500;800&display=swap" rel="stylesheet">
    </head>
    <body>
        <main class="splash" style="background-image: url(../img/{{ backgroundImage }});">
        <div class="left">
        <h1 class="intro-text">{{ pageTitle }} </h1>
        <ul class="stats no-bullets">
        {% for stat in stats %}
            <li>{{ stat | transformStat }}</li>
        {% endfor %}
        </ul>
        </div>
        <div class="right">
        {{ content }}
        </div>
        </main>
    </body>
</html>